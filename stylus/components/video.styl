@import '../utils/colors.styl'
@import '../utils/mixins.styl'

.vh-video-wrapper
  cursor: pointer
  position: relative
  padding-bottom: 56.25%
  z-index: 1
  .vh-video-play-poster,
  video
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    width: 100%
    display: block

.vh-video-play-poster
  background: linear-gradient(45deg, hsla(colors.primary, .5), hsla(colors.accent, .5))
  z-index: 10
  svg
    fill: #FFF
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 32px
    height: 32px
    +minMedia(md)
      width: 64px
      height: 64px
  &.is-hidden
    display: none
