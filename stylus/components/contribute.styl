@import '../utils/colors.styl'
@import '../utils/mixins.styl'

.section-contribute
  background: linear-gradient(65deg, var(--color-accent), var(--color-primary))
  color: var(--color-gray)
  padding-top: remCalc(60)
  padding-bottom: @padding-top
  text-align: center
  .button-group
    display: flex
    flex-flow: column
    max-width: remCalc(320)
    margin-left: auto
    margin-right: auto
  +minMedia(md)
    padding-top: remCalc(150)
    padding-bottom: @padding-top
    .button-group
      flex-flow: row
      justify-content: center
      max-width: 100%
  .section-heading
    color: #FFF
