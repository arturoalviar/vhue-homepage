@import '../utils/mixins.styl'

.button
  border-radius: .35rem
  box-shadow: 0 12px 24px rgba(0, 0, 0, .08)
  display: inline-flex
  align-items: center
  justify-content: center
  font-size: 1rem
  font-weight: 600
  line-height: 1.8
  margin-bottom: remCalc(15)
  min-width: 100px
  padding: 10px 1.25rem
  text-align: center
  transition: all .3s ease
  +minMedia(md)
    margin-bottom: 0
    &:not(:last-of-type)
      margin-right: 1rem
  &.primary
    background: #FFFFFF
    border: 2px solid transparent
    color: var(--color-primary)
  &.secondary
    background: transparent
    border: 2px solid #FFF
    color: #FFF
  &:hover,
  &:focus
    opacity: .85
